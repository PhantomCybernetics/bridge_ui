{
    "compilerOptions": {
        "outDir": "./server/build",
        "allowJs": true,
        "target": "es5",
        "lib": [
            "es5",
            "es2015.symbol"
        ],
        "noEmitOnError" : true,
        "noImplicitAny" : true,
        "strictNullChecks": false
    },
    "include": [
        "./server/src/lib/*",
        "./server/src/*.ts"
    ],
    "exclude" : [
        "node_modules"
    ]
}